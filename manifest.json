{
  "manifest_version": 3,
  "name": "Accessibility Translator",
  "version": "1.0.0",
  "description": "Universal accessibility tools for the web",
  "permissions": [
    "activeTab",
    "storage",
    "tts",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/bubble.js", "content/features.js"],
      "css": ["content/bubble.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/five.jpg",
      "48": "icons/eight.jpg",
      "128": "icons/ten.jpg"
    }
  },
  "icons": {
    "16": "icons/five.jpg",
    "48": "icons/eight.jpg",
    "128": "icons/ten.jpg"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/bubble.html"],
      "matches": ["<all_urls>"]
    }
  ]
}